{
  "name": "Who Owns You",
  "description": "Shows which youtube channels are owned by private equity.",
  "version": "1.1.1",
  "manifest_version": 3,
  "background": { 
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data/channels.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-on-16.png",
      "32": "images/icon-on-32.png",
      "48": "images/icon-on-48.png",
      "64": "images/icon-on-64.png",
      "128": "images/icon-on-128.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Who Owns You"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "who-owns-you@randomstring.dev",
      "strict_min_version": "121.0"
    }
  }
}
